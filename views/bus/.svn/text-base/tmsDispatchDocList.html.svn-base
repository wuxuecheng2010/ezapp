	</head>

	<body>
		<header class="mui-bar mui-bar-nav">
			<a class="mui-action-back mui-icon mui-icon-left-nav mui-pull-left"></a>
			<h1 class="mui-title">派车单</h1>
		</header>
		
		<div class="mui-content ">
            <div class="mui-row" >
            	<div class="mui-col-sm-2  mui-col-xs-2" ><button id="btn_previous" class="mui-btn mui-btn-block mui-btn-grey">上一天</button></div> 
            	<div class="mui-col-sm-8  mui-col-xs-8"><button id='btn_credate' type="button" class="mui-btn mui-btn-block ">选择日期</button></div>
				<div class="mui-col-sm-2  mui-col-xs-2"><button id="btn_next" class="mui-btn mui-btn-block mui-btn-grey">下一天</button></div>
            </div>
             
             <!--<ul id="listheader" class="mui-table-view mui-table-view-chevron" style="margin-top: 1px;">
				<li class="mui-table-view-cell">
				    <div class="mui-row" >
		            	<div class="mui-col-sm-2  mui-col-xs-4" ><span>派车单ID</span></div> 
		            	<div class="mui-col-sm-3  mui-col-xs-8" ><span>驾驶员</span></div>
	                </div>
				</li>
			 </ul>-->
			
			<ul id="list" class="mui-table-view mui-table-view-chevron" style="margin-top: 1px;">
				
			</ul>
			
		</div>

		<div id="pop_memu" class="mui-popover mui-popover-action mui-popover-bottom">
			
			<ul class="mui-table-view">
				<li class="mui-table-view-cell" id="pop_btn_call">
					<a href="#" id="pop_btn_call_text"   style="color: #FF3B30;">呼叫</a>
				</li>
			</ul>
			<ul class="mui-table-view">
				<li class="mui-table-view-cell" id="pop_btn_copy">
					<a href="#" style="color: #FF3B30;">复制</a>
				</li>
			</ul>
			<ul class="mui-table-view">
				<li class="mui-table-view-cell">
					<a href="#pop_memu"><b>取消</b></a>
				</li>
			</ul>
		</div>

		<script src="../../js/mui.min.js"></script>
		<script src="../../js/mui.picker.min.js"></script>
		<script src="../../js/mui.poppicker.js"></script>
		<script src="../../js/myglobal.js"></script>
		<script src="../../js/jquery-3.2.1.min.js"></script>

		<script>
			 var dtcredate="";
			 var mobile="";
			 var drivername="";
			mui.init({
				gestureConfig: {
					longtap: false //默认为false
				}
			});

			
			mui.plusReady(function(){
				init();
				onopen();//界面打开时 触发
				previous_tap();
				next_tap();
				
			})
			

		function init() {
				jQuery('#btn_credate').attr('data-options', DATERANGER);	
				var btn_credate = document.getElementById("btn_credate");
				btn_credate.innerText = toshortdata(new Date());
				dtcredate=btn_credate.innerText;
				
				var btns = mui('#btn_credate');
				btns.each(function(i, btn) {
					btn.addEventListener('tap', function() {
						var vbtn = this;
						var optionsJson = this.getAttribute('data-options') || '{}';
						var options = JSON.parse(optionsJson);
						var id = this.getAttribute('id');
						/*
						 * 首次显示时实例化组件
						 * 示例为了简洁，将 options 放在了按钮的 dom 上
						 * 也可以直接通过代码声明 optinos 用于实例化 DtPicker
						 */
						var picker = new mui.DtPicker(options);
						picker.show(function(rs) {
							/*
							 * rs.value 拼合后的 value
							 * rs.text 拼合后的 text
							 * rs.y 年，可以通过 rs.y.vaue 和 rs.y.text 获取值和文本
							 * rs.m 月，用法同年
							 * rs.d 日，用法同年
							 * rs.h 时，用法同年
							 * rs.i 分（minutes 的第二个字母），用法同年
							 */
							//result.innerText = '选择结果: ' + rs.text;
							vbtn.innerText = rs.text;
							//console.log(vbtn.getAttribute("id"));
							var tmpid = vbtn.getAttribute("id");
							if(tmpid == "btn_credate") {
								dtcredate = rs.text;
								ajax(dtcredate);
							} else {
								dtcredate = rs.text;
							}
							/* 
							 * 返回 false 可以阻止选择框的关闭
							 * return false;
							 */
							/*
							 * 释放组件资源，释放后将将不能再操作组件
							 * 通常情况下，不需要示放组件，new DtPicker(options) 后，可以一直使用。
							 * 当前示例，因为内容较多，如不进行资原释放，在某些设备上会较慢。
							 * 所以每次用完便立即调用 dispose 进行释放，下次用时再创建新实例。
							 */
							picker.dispose();
						});
					}, false);
				});
					
					
				}

			//ajax 请求中。
			ajaxxing();
			var ajax = function(credate) {
				//利用RunJS的Echo Ajax功能测试
				var url =getServerPath(localStorage.netmod)
				var dataType = 'json';
				//var vcproductinfo = ShortPY(document.getElementById('vcproductinfo').value.toUpperCase());
				//发送数据
				var data = {
					controller: 'TmsDispatch',
					method: 'getTmsDispatchlistWithCoverState',
					dispatchdate: credate,
					token: TOKEN
				};
				//mui.post(url, data, success, dataType);
				mui.ajax(url, {
					data: data,
					dataType: dataType, //服务器返回json格式数据
					type: 'post', //HTTP请求类型
					timeout: 10000, //超时时间设置为10秒；
					success: success,
					error: err
				});

			};
			//成功响应的回调函数
			var success = function(response) {
				if(response != null) {
					var syscode = response.syscode;
					var sysreason = response.sysreason;
					if(syscode == SYSCODE_NO) {
						tokenOutTime(sysreason);
					} else {
						console.log(JSON.stringify(response));
						//查询按钮点击时  保存到local  按照文本的形式保存
						localStorage.tmsdispatchlist = JSON.stringify(response.sysdata.TmsDispatch_getTmsDispatchlistWithCoverState);
						//console.log("888*response.sysdata.SalesNotice_salesNotice******"+JSON.stringify(response.sysdata.SalesNotice_salesNotice));
						displayui(response.sysdata.TmsDispatch_getTmsDispatchlistWithCoverState);
						//searchnotice(response.sysdata.SalesNotice_salesNotice.docids);
						//loogtap_valueget();//设置长按时 赋值
						
					}
				}
			};
			//将查询结果显示到UI上，并且绑定事件
			function displayui(jsonobj) {
				jQuery('#list').find('li').remove();
				jQuery.each(jsonobj, function(index, content) {
					var num = index + 1;
					
					var flagcover=content.FLAGCOVER;
					var listyle='<li class="mui-table-view-cell">';
					
					switch (flagcover){
						case "0":
						    listyle='<li class="mui-table-view-cell" style="background-color:#87CEFA">';
							break;
						case "1":
							listyle='<li class="mui-table-view-cell" style="background-color:#CAFF70">';
						    break;
						default:
							listyle='<li class="mui-table-view-cell" style="background-color:#EEEE00">';
							break;
					}
					


					jQuery('#list').append(
						//'<li class="mui-table-view-cell">'+
						listyle+
							'<a class="mui-navigate-right">'+
				                '<div class="mui-row" >'+
				
					            	'<div class="mui-col-sm-4  mui-col-xs-4" ><span id="dispatchid">'+content.DISPATCHID+'</span></div>'+
					            	'<div class="mui-col-sm-8  mui-col-xs-8" ><span id="routename">'+content.ROUTENAME+'</span></div>'+

			                    '</div>'+
			                '</a>'+
			            '</li>'
					);
				});

				jQuery('#list a').click(function() {
					//显示商品信息
					var dispatchid = jQuery(this).find('#dispatchid').html();
					open_dtl(dispatchid);
				});

				

				//右滑直接看进度

				//swiperightcopy(jQuery(".mui-table-view-cell"), 'btn_copy');
				//长按复制
				longtapcopy(jQuery(".mui-card-content-inner,.mui-table-view-cell"), mui('#pop_memu'));

				cus_popmenu_init(); //自定义附带的pop选项事件

			}

			var cus_popmenu_init = function() {
				jQuery("#pop_btn_call").click(function() {
					//copyToClip(COPY_INFO);
					mui("#pop_memu").popover('toggle');
					
					call(mobile);
					
				});


			}


var open_dtl = function(dispatchid) {
				
				mui.openWindow({
					url: 'tmsEnvelopeCoverDispatchList.html',
					id: 'tmsEnvelopeCoverDispatchList.html',
					extras: {
						dispatchid: dispatchid						
					},
					waiting: {
						autoShow: false
					}
				});
			}

			
			
			
			
			var loogtap_valueget=function(){
				jQuery.each(jQuery(".mui-card-content-inner,.mui-table-view-cell"), function(i, elem) {
					elem.addEventListener('longtap', function() {
						
						//显示商品信息
					mobile = jQuery(this).find('#mobile').html();
					drivername = jQuery(this).find('#drivername').html();
					
					jQuery("#pop_btn_call_text").html('呼叫 '+drivername+' '+mobile);
					//alert(vcbillcode);
						//getCopyInfo(elem);
						//alert(COPY_INFO);
						//mobj.popover('toggle');
					});
				});
				
				
			}
			
			var changeDate=function(obj,currentDate,n){
				var tmpdate=adddate(currentDate, n);
				obj.innerText= toshortdata(tmpdate);
				return obj.innerText;
			}
			var previous_tap=function(){
				document.getElementById("btn_previous").addEventListener("tap",function(){
					//alert("dtcredate"+dtcredate);
					//var tmpdate=adddate(new Date(dtcredate), -1);
					var btn_credate = document.getElementById("btn_credate");
				        //btn_credate.innerText = toshortdata(tmpdate);
				        //dtcredate=btn_credate.innerText;
				    dtcredate=changeDate(btn_credate,new Date(dtcredate),-1)
					ajax(dtcredate);
				})
			}
			var next_tap=function(){
				document.getElementById("btn_next").addEventListener("tap",function(){
					//alert("dtcredate"+dtcredate);
					var btn_credate = document.getElementById("btn_credate");
					dtcredate=changeDate(btn_credate,new Date(dtcredate),1)
					ajax(dtcredate);
				})
			}
			var onopen=function(){
				var btn_credate = document.getElementById("btn_credate");
				ajax(dtcredate);
			}
		</script>
	</body>

</html>